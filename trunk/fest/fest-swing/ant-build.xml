<?xml version="1.0"?>
<project name="fest-swing" default="all" basedir=".">

  <property file="ant-build.properties" />
	<import file="../build-template.xml"/>

	<target name="test" depends="compile">
		<testng listeners="org.fest.swing.testng.ScreenshotOnFailureListener" outputDir="${target.test.results.dir}" haltOnFailure="true" verbose="2">
			<classfileset dir="${target.test.classes.dir}" includes="**/JButtonFixtureTest.class" />
			<classpath location="${target.test.classes.dir}" />
			<classpath location="${target.classes.dir}" />
			<classpath refid="test.classpath" />
		</testng>
	</target>

</project>
